generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
/////////////////////////
// User
/////////////////////////
model User {
  id          String   @id @default(uuid())
  email       String   @unique
  firebase_id String   @unique
  name        String?

  UserPreferences UserPreferences?

  @@map("users")
}

/////////////////////////
// UserPreferences
/////////////////////////
model UserPreferences {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique
  theme     Theme
  language  Language

  @@map("user_preferences")
}

enum Theme {
  LIGHT
  DARK
}

enum Language {
  EN
  FR
  NL
}

/////////////////////////
// Athlete
/////////////////////////
model Athlete {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  bib Int
  gender Gender
  birthDate DateTime
  club String

  @@map("athletes")
}

enum Gender {
  M
  F
}

////////////////
// Event
////////////////

model Event {
  id Int @id @default(autoincrement())
  name String
  abbr String
  group EventGroup
  type EventType

  @@map("events")
}

enum EventGroup {
  SPRINT
  JUMP
  THROW
  MIDDLE_DISTANCE
  LONG_DISTANCE
  WALK
  COMBINED
}

enum EventType {
  TIME
  DISTANCE
  HEIGHT
  POINTS
}

